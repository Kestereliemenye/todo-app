<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GOALS</title>
    <link rel="icon" href="/public/images/_13794220.png" type="image/x-icon">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="stylesForSignup.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <img class="first-img" src="images/for-login.png" alt="note pic">
    <img class="second-img" src="images/2nd-login-img.png" alt="note pic">
    <header>
        <div class="logo-words">
            <span>Goals.App</span>
            <p class="intro">Lets help you achieve your goal</p>
        </div>
        <div class="login-signup">
            <a href="login" class="log">Login</a>
            <a href="signup" class="sign">Signup</a>
        </div>
    </header>

    <div class="signup-form">
        <form action="/signup" method="post" class="for-signup" id="signUpForm">
            <div class="signup-group">
                <label for="name">Enter Name</label>
                <input type="text" placeholder="Enter name" required name="name" autocomplete="off" class="sign-input">
            </div>
            <br><br><br><br>
            <div class="signup-group">
                <label for="password">Enter password</label>
                <span id="showPassword"><i class="fa fa-eye" aria-hidden="true"></i></span>
                <input type="password" placeholder="Enter password" required name="password" autocomplete="off" class="sign-input-password" id="password">
            </div>
            <br>
            <br>
            <button id="create-form">Create Account</button>
        </form>
    </div>

    

    <footer>
        &copy;2024
    </footer>




<script>
    // to show password
    const passwordEye = document.getElementById("showPassword")
    const passwodInput = document.getElementById("password")
    // let password shown = false
    passwordEye.addEventListener("click", ()=>{
        if(passwodInput.type === "password"){
            passwodInput.type = "text"
        } else{
            passwodInput.type = "password"
        }
    })




 // to submit form
 document.getElementById("create-form").addEventListener("submit", async(event)=>{
    event.preventDefault();
    

    //get form input
    const formData = new FormData(event.target)
    const username = formData.get("name")
    const password = formData.get("password");


    const response = await fetch("/",{
        method: "POST",
        headers: {
            "Content-Type": "application/x-www-form-urlencoded"
        },
        body: `username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}` // Include password field in the body
    })
    if(response.ok){
        alert("successful")
    }

 })




</script>

</body>
</html>